# Hoofdconfig behoudt alles wat je eerder had
[window]
padding = { x = 8, y = 8 }
dynamic_padding = true
decorations = "Full"
opacity = 0.92
startup_mode = "Windowed"
title = "Alacritty"
dynamic_title = true

[font]
normal.family = "FiraCode"
bold.family = "FiraCode"
italic.family = "JetBrains Mono"
bold_italic.family = "JetBrains Mono"
size = 12.0
builtin_box_drawing = true

[cursor]
style.shape = "Beam"
style.blinking = "Always"
unfocused_hollow = true

[scrolling]
history = 10000
multiplier = 3

key = "V"
mods = "Control|Shift"
action = "Paste"

key = "C"
mods = "Control|Shift"
action = "Copy"

key = "Key0"
mods = "Control"
action = "ResetFontSize"

key = "Equals"
mods = "Control"
action = "IncreaseFontSize"

key = "Minus"
mods = "Control"
action = "DecreaseFontSize"


[colors.primary]
background = "0x1e1e2e"
foreground = "0xd9e0ee"

[colors.cursor]
text = "0x1e1e2e"
cursor = "0xf5e0dc"

[colors.normal]
black   = "0x1e1e2e"
red     = "0xf28fad"
green   = "0xabe9b3"
yellow  = "0xf8bd96"
blue    = "0x96cdfb"
magenta = "0xc9cbff"
cyan    = "0x89dceb"
white   = "0xd9e0ee"

[colors.bright]
black   = "0x575268"
red     = "0xf28fad"
green   = "0xabe9b3"
yellow  = "0xf8bd96"
blue    = "0x96cdfb"
magenta = "0xc9cbff"
cyan    = "0x89dceb"
white   = "0xffffff"

